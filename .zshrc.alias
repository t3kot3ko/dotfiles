alias ls='ls --color=auto'
alias ll='ls -al'
alias grep="grep --color=auto"

alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"

alias g="git"
alias d="cd"
alias dr="cd-gitroot"
